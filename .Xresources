! -- Urxvt -- !
URxvt.buffered: true
URxvt.cursorColor: #395573
URxvt.cursorUnderline: false
URxvt.cursorBlink: false
URxvt.geometry: 80x22
URxvt*urgentOnBell: true
URxvt.lineSpace: 2
URxvt.letterSpace: -1
URxvt*scrollBar_right: false
URxvt*scrollBar: false
URxvt*borderLess: false
urxvt*background: rgba:eeee/eeee/eeee/c800
URxvt.depth: 32

! -- Fonts -- !
URxvt*font:xft:inconsolata:size=10:antialias=true
!URxvt*font:xft:Anonymous Pro:bold:size=10,xft:Symbola:style=regular:size=12
!URxvt*boldFont:xft:Anonymous Pro:bold:size=10,xft:Symbola:style=regular:size=12
!URxvt*font:xft:Inconsola:medium:size=10,xft:Symbola:style=Regular
!URxvt*boldFont:xft:Inconsolatazi4:medium:size=10,xft:Symbola:style=Regular
!URxvt*font:xft:dejavu sans mono:medium:size=12
!URxvt*boldFont:xft:dejavu sans mono:medium:size=11
!URxvt*font:xft:droid sans mono slashed:medium:pixelsize=16
!URxvt*boldFont:xft:droid sans mono slashed:medium:pixelsize=16
!URxvt*font:xft:luxi mono:regular:pixelsize=16
!URxvt*boldFont:xft:luxi mono:regular:pixelsize=16

! -- Colours -- !
#include "/home/aakos/.config/colours/paper"

! --  Extensions -- !
!URxvt.perl-ext-common:     matcher,keyboard-select,url-select,clipboard
!URxvt.keysym.M-Escape:     perl:keyboard-select:activate
!URxvt.keysym.M-u:          perl:url-select:select_next
!URxvt.keysym.M-s:          perl:keyboard-select:search
!URxvt.clipboard.autocopy:  true
!URxvt.keysym.M-c:          perl:clipboard:copy
!URxvt.keysym.M-v:          perl:clipboard:paste
!URxvt.keysym.M-C-v:        perl:clipboard:paste_escaped
!URxvt.url-select.launcher: /home/jason/Scripts/run_browser
!URxvt.matcher.rend.0:      -Uline fg16
!URxvt.matcher.button:      1
